@page "/game"
@inject NavigationManager Nav
@inject GameSessionService Session

@using Ludo.Blazor.Components.View
@using Ludo.Game.Controller
@using Ludo.Game.Enums
@using Ludo.Game.Interfaces
@using Ludo.Game.Models.Board
@using Ludo.Game.Models.Piece

@if (Session.Game == null)
{
    <div class="home">
        <div class="home-card">
            <p>Game not initialized.</p>
            <button class="play-button" @onclick="BackToHome">
                Return To Home
            </button>
        </div>
    </div>
}
else
{
    <div class="game">
        <div class="game-card">

            <WinnerCard Visible="showWinnerCard" Winner="winner" OnRestart="ResetGame" />

            <div class="game-main">
                <div class="player-panel">
                    <PlayerTurnPanel Player="CurrentPlayer" />
                    <DicePanel View="View" OnRoll="RollDiceAnimated" />
                </div>

                <BoardView Board="CurrentGame.Board" PiecesOnTiles="View.PiecesOnTiles(CurrentGame)"
                           ClickablePieces="clickablePieces" PreviewTile="previewTile" KilledPiece="killedPiece"
                           OnPieceClicked="OnPieceClicked" OnPieceHover="OnPieceHover" OnPieceHoverOut="ClearPreview" />
            </div>

            <GameLogPanel Logs="gameLogs" LastLog="lastLog" />
            @* <button class="play-button" @onclick="() => OnGameEnded(CurrentPlayer)">
                Return To Home
            </button> *@
        </div>
    </div>
}

@code {
    GameController CurrentGame => Session.Game!;
    IPlayer CurrentPlayer => CurrentGame.GetCurrentPlayer();
    IBoard Board => CurrentGame.Board!;

    GameViewState View = new();

    HashSet<Piece> clickablePieces = new();
    Tile? previewTile;
    Piece? killedPiece;

    bool showWinnerCard;
    IPlayer? winner;

    List<GameLog> gameLogs = new();
    GameLog? lastLog;

    protected override void OnInitialized()
    {
        if (Session.Game == null)
            return;

        Log($"Turn â†’ {CurrentPlayer.Name}", GameLogType.Turn, CurrentPlayer);

        CurrentGame.OnCaptured += async (attacker, victim) =>
        {
            Log($"{attacker.Name} captured a {victim.Color} piece ðŸ’¥", GameLogType.Kill, attacker);
            killedPiece = victim;
            StateHasChanged();

            await Task.Delay(600);
            killedPiece = null;
            StateHasChanged();
        };

        CurrentGame.OnGameEnded += OnGameEnded;
    }

    async Task RollDiceAnimated()
    {
        if (View.IsRolling)
            return;

        View.StartRolling();
        StateHasChanged();

        var random = new Random();

        // visual fake roll
        for (int i = 0; i < 10; i++)
        {
            View.SetDisplayDice(random.Next(1, CurrentGame.Dice.Sides + 1));
            StateHasChanged();
            await Task.Delay(80);
        }

        // real roll
        int value = CurrentGame.RollDice();
        View.StopRolling(value);

        Log($"{CurrentPlayer.Name} rolled {View.DisplayDiceValue}", GameLogType.Dice, CurrentPlayer);

        clickablePieces = CurrentGame.GetMoveablePieces(CurrentPlayer).ToHashSet();

        if (clickablePieces.Count == 0)
        {
            Log($"{CurrentPlayer.Name} has no valid move", GameLogType.Info, CurrentPlayer);
            EndTurn();
        }
    }

    async void OnPieceClicked(Piece piece)
    {
        if (!clickablePieces.Contains(piece) || View.IsAnimating)
            return;

        clickablePieces.Clear();
        View.IsAnimating = true;

        foreach (var tile in View.GetMovePath(CurrentGame, Board, piece))
        {
            View.AnimatePiece(piece, tile);
            await Task.Delay(250);
            StateHasChanged();
        }

        View.ClearAnimation(piece);

        CurrentGame.MovePiece(CurrentPlayer, piece);

        View.IsAnimating = false;
        AfterMove(piece);
        StateHasChanged();
    }

    void AfterMove(Piece piece)
    {
        if (CurrentGame.GetPieceTile(piece)?.Zone == Zone.Goal)
            Log($"{CurrentPlayer.Name} reached goal â­", GameLogType.Action, CurrentPlayer);

        if (!CurrentGame.IsTurnFinished())
        {
            Log($"{CurrentPlayer.Name} gets another turn ðŸŽ²", GameLogType.Dice, CurrentPlayer);
            View.ResetDice();
        }
        else
        {
            EndTurn();
        }
    }

    void EndTurn()
    {
        previewTile = null;
        clickablePieces.Clear();
        View.ResetDice();

        CurrentGame.NextTurn();
        Log($"Turn â†’ {CurrentPlayer.Name}", GameLogType.Turn, CurrentPlayer);
    }

    void OnPieceHover(Piece piece)
    {
        if (!clickablePieces.Contains(piece)) return;
        previewTile = View.GetDestinationTile(CurrentGame, Board, piece);
    }

    void ClearPreview() => previewTile = null;

    void OnGameEnded(IPlayer player)
    {
        winner = player;
        showWinnerCard = true;
        View.DisableDice();

        StateHasChanged();
    }

    void ResetGame()
    {
        Session.Reset();
        Nav.NavigateTo("/setup", true);
    }

    void Log(string message, GameLogType type, IPlayer? player)
    {
        gameLogs.Add(new GameLog(message, type, DateTime.Now, player));
        lastLog = gameLogs.Last();

        if (gameLogs.Count > 40)
            gameLogs.RemoveAt(0);
    }

    void BackToHome() => Nav.NavigateTo("/");
}